<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Включаем все SharedPreferences для облачного резервного копирования -->
        <!-- Это гарантирует сохранение заметок и закладок в облаке -->
        <include domain="sharedpref" path="."/>
    </cloud-backup>
    <device-transfer>
        <!-- Включаем все SharedPreferences для передачи между устройствами -->
        <!-- Это позволяет переносить заметки и закладки на новое устройство -->
        <include domain="sharedpref" path="."/>
    </device-transfer>
</data-extraction-rules>